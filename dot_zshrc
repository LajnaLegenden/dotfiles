# P10k instant prompt
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Zinit setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
if [ ! -d "$ZINIT_HOME" ]; then
  mkdir -p "$(dirname $ZINIT_HOME)"
  git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi
source "${ZINIT_HOME}/zinit.zsh"
HISTSIZE=10000           # Max history size
SAVEHIST=10000           # Number of history entries to save
HISTFILE=~/.zsh_history  # History file location
setopt append_history    # Append to the history file instead of overwriting it
setopt share_history     # Share history between all sessions
setopt inc_append_history  # Incrementally save history after each command

zinit light romkatv/powerlevel10k
# Deferred plugins
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light Aloxaf/fzf-tab
zinit snippet OMZL::history.zsh

for snippet in git sudo; do
  zinit ice wait lucid
  zinit snippet OMZP::$snippet
done

# Load p10k config
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

eval "$(zoxide init zsh)"
source <(fzf --zsh)
eval "$(fnm env --use-on-cd --shell zsh)" 
# Basic keybindings
bindkey -e
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward
bindkey '^[w' kill-region

# Deferred completion styling
zinit ice wait lucid
zinit light %HOME/.config/zsh/completion-config

# ========== Aliases ==========
alias ..="cd .."
alias ...="cd ../.."
alias ls="eza"
alias grep="rg"
alias ps="procs"
alias yui="yarn upgrade-interactive --latest && yarn-dedupe && yarn"
alias cd="z"
alias cat="bat"
alias gcam="git commit --amend --no-edit"
alias gitClean="git pull -p && git branch -vv | grep ': gone]' | awk '{print \$1}' | xargs -r git branch -D && git branch | wc -l"
alias :q="echo 'ARE YOU STOOOPID, THIS IS NOT A FILE'"
alias :wq="echo 'ARE YOU STOOOPID, THIS IS NOT A FILE, WHAT ARE YOU SAVING?'"
alias grm="git fetch origin && git rebase origin/master"
alias vim="nvim"
alias vi="nvim"
alias v="nvim"
alias cm="chezmoi"
alias ts="/home/lajna/.local/bin/tmux-sessionizer"
alias git-https='git remote set-url origin https://github.com/$(git remote get-url origin | sed "s/https:\/\/github.com\///" | sed "s/git@github.com://")'
alias git-ssh='git remote set-url origin git@github.com:$(git remote get-url origin | sed "s/https:\/\/github.com\///" | sed "s/git@github.com://")'

if [ -f ~/.secrets ]; then
  . ~/.secrets
fi

export EDITOR=nvim


autoload -Uz compinit && compinit   # Zsh built-in completion

# bun completions
[ -s "/home/lajna/.bun/_bun" ] && source "/home/lajna/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
